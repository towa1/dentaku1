<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/formula"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:text="@string/formula_text"
                android:textAlignment="viewEnd"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="c"
                android:textSize="18sp" />

            <Button
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="del"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="/"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="*"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/subtract"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="-"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/num0"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="0"
                android:textSize="18sp" />

            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="."
                android:textSize="18sp" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="="
                android:textSize="18sp" />

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="+"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>